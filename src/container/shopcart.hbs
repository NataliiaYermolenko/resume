<main>
     {{#with navigation}}
     <div class="nav">
          {{#each links}}
          <div class="nav-item">
               {{#if href}}
               <a href="{{href}}" class="nav-link">{{text}}</a>
               {{else}}
               <a href="{{href}}" class="nav-link disabled">{{text}}</a>
               {{/if}}
          </div>
          {{/each}}
     </div>
     {{/with}}

     {{#with header}}
     <div class="display-2 pb-5">{{title}}</div>
     <div class="row">
          <div class="col-12">
               {{#with button}}
               <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>

               {{/with}}
               {{/with}}
               <hr>
          </div>
     </div>
     <!--з component не працює-->
     <section>
          {{#each goodsBlock}}
          <div class="card mb-2">
               <div class="container">
                    <div class="row justify-content-start">
                         <div class="col-2">
                              <img src="{{image}}" class="img-fluid rounded-start" alt="...">
                         </div>
                         <div class="col-4">
                              <h5 class="card-title">{{name}}</h5>
                              <p class="card-text">{{description}}</p>
                         </div>
                         <div class="col-3">
                              {{#with price}}
                              <p class="card-text text-muted">{{title}} {{value}}</p>
                              {{/with}}
                         </div>
                         <div class="col-1">
                              <p class="card-text">{{amount}}</p>
                         </div>
                         <div class="col-2">
                              {{#each buttons}}
                              {{#if isPrimary}}
                              <button class="btn btn-primary mb-2">{{text}}</button>
                              {{else}}
                              <button class="btn btn-outline-danger mt-2 pb-2">{{text}}</button>
                              {{/if}}
                              {{/each}}

                         </div>
                    </div>
               </div>
          </div>
          {{/each}}
     </section>
     <hr>

     <div>
          {{#with total}}
          <div class="display-5 pb-3">{{title}}</div>
          <div class="display-6 pb-2">{{amount}}</div>
          <div class="display-6 pb-2">{{delivery}}</div>
          {{#each buttons}}
          {{#if isSuccess}}
          <div class="row">
               <div class="col-12">
                    <div class="row">
                         <div class="col-5">
                              <a href="{{link}}" class="btn btn-success mb-2">{{text}}</a>
                         </div>
                    </div>
                    {{else}}
                    <a href="{{link}}" class="btn btn-outline-success mt-2">{{text}}</a>
                    {{/if}}
                    {{/each}}
                    {{/with}}
               </div>
          </div>
     </div>
     <hr>
     <div class="m-2 pb-3">
          {{#with goodsOtherBlock}}
          <div class="display-3 pb-3">{{title}}</div>
          <section class="row g-1">
               {{#each cards}}
               <div class="col-4">
                    <div class="card m-2 ">
                         <img class="card-img-top" src="https://picsum.photos/400/200" alt="...">
                         <div clas=" card-body"></div>
                         <h5 class="card-title p-2">{{title}}</h5>
                         <div class="List-group-item">
                              {{#if isHot}}
                              <span class="bage text-bg-warning rounded-pill text-uppercase m-3 p-2">top</span>
                              {{/if}}
                              {{#if idNew}}
                              <span class="bage text-bg-primary rounded-pill text-uppercase m-3 p-2">нова</span>
                              {{/if}}
                         </div>
                         <p class="text-muted ps-2 pb-2">{{description}}</p>
                    </div>
               </div>
               {{/each}}
          </section>
          {{/with}}
     </div>

     <div class="row g-1">
          {{#with subscribe}}

          <div class="col-12">
               <div class="card text-bg-dark mb-3">
                    <div class="card-header display-4">{{header}}</div>
                    <div class="card-body">
                         <p class="card-text display-6">{{description}}</p>
                    </div>
                    <div class="col-4">
                         {{#each buttons}}
                         <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
                         {{/each}}
                    </div>
               </div>
          </div>
          {{/with}}
     </div>


</main>

<section>
     <div>
          <ul>
               {{#each footer}}
               <li>
                    <a href="{{link}}" class="btn btn-link">{{text}}</a>
               </li>
               {{/each}}
          </ul>
     </div>
</section>