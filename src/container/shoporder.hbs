<main>
     {{#with navigation}}
     <div class="nav">
          {{#each links}}
          <div class="nav-item">
               {{#if href}}
               <a href="{{href}}" class="nav-link">{{text}}</a>
               {{else}}
               <a href="{{href}}" class="nav-link disabled">{{text}}</a>
               {{/if}}
          </div>
          {{/each}}
     </div>
     {{/with}}

     <div class="display-1 pb-5">{{header}}</div>
     <div class="row">
          {{#with contacts_data}}
          <h2> {{title}}</h2>
          <div class="row">
               <div class="col-3">
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <button class="btn btn-warning m-3 p-2">{{text}}</button>
                    {{else}}
                    <button class="btn btn-outline-warning">{{text}}</button>
                    {{/if}}
                    {{/each}}

                    {{#with form}}
                    {{#with input}}
                    <div>
                         {{#with surname}}

                         <label class="form label">{{label}}</label>
                         <div class="row">
                              <div class="col-3">
                                   <label for="{{label}}" class="visually-hidden">{{label}}</label>
                                   <div class="col-3"></div>
                                   <input type="password" class="form-control" placeholder="{{placeholder}}">
                                   <div class="form-text text-muted">{{caption}}</div>
                              </div>
                         </div>

                         {{/with}}

                         {{#with name}}
                         <label class="form label">{{label}}</label>
                         <div class="row">
                              <div class="col-3">
                                   <label for="{{label}}" class="visually-hidden">{{label}}</label>
                                   <input type="password" class="form-control" placeholder="{{placeholder}}">
